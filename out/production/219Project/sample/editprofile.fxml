<BorderPane id="loginDialogPane" fx:id="loginBorderPane" maxHeight="500.0" maxWidth="750.0" minHeight="500.0" minWidth="750.0" prefHeight="500.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.EditProfileController">
   <center>
      <VBox alignment="CENTER" maxHeight="250.0" maxWidth="750.0" minHeight="250.0" minWidth="750.0" prefHeight="250.0" prefWidth="750.0" translateX="-40.0" BorderPane.alignment="CENTER">
         <children>
            <PasswordField id="passwordTextField" fx:id="editProfileCurrentPwd" maxHeight="25.0" maxWidth="200.0" minHeight="25.0" minWidth="200.0" prefHeight="25.0" prefWidth="200.0" promptText="Enter Current Password" translateX="50.0">
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
            </PasswordField>
            <PasswordField id="passwordTextField" fx:id="editProfileNewPwd" maxHeight="25.0" maxWidth="200.0" minHeight="25.0" minWidth="200.0" prefHeight="25.0" prefWidth="200.0" promptText="Enter New Password" translateX="50.0" translateY="20.0" />
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="666.0" translateX="-75.0" translateY="-75.0" BorderPane.alignment="CENTER">
         <children>
            <Button id="loginDialogLogin" fx:id="editProfileUpdate" alignment="CENTER" mnemonicParsing="false" onAction="#updateUser" text="Update" translateX="75.0">
               <HBox.margin>
                  <Insets top="10.0" />
               </HBox.margin>
            </Button>
            <Button id="loginDialogCancel" fx:id="editProfileCancel" cancelButton="true" mnemonicParsing="false" onAction="#cancelEdit" text="Cancel" translateX="100.0">
               <HBox.margin>
                  <Insets top="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </bottom>
</BorderPane>
